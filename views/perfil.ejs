<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" type="image/png" href="favicon.png">
        <link href="bootstrap/bootstrap.min.css" rel="stylesheet" media="screen">
        <link rel="stylesheet" href="css/perfil.css">
        <meta name="viewport" content="width-device-width, initial-scale=1">
        <title>404-Perfil</title>
    </head>
    <body>
        <header>
            <%- include("cabezera") %>
        </header>

        <!-- CUERPO -->
        <div class="container">
            <div class="main">

                <div class="row ">
                    <!-- informarcion del usuario-->
                    <div class="col-md-4 mb-1 mt-3">
                        <div class="card">
                            <div class="card-body foto">
                                <img src="/imagen/<%=usuario.correo_visitado%>" alt="imagen de usuario">
                                <div class="mt-3">
                                    <h4><%=usuario.usuario_visitado%></h4>
                                    <p>fecha de alta : <%=usuario.fecha%></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- estadisticas del usuario -->
                    <div class="col-md-7 mb-1 mt-3">
                        <div class="card">
                            <div class="row rowInfo">
                                
                                <!-- reputacion -->
                                <div class="col-xs-12 col-sm-4 emphasis">
                                    <h3><strong><%=usuario.reputacion%></strong></h3>
                                    <p>Reputacion</p>
                                </div>
                                <!-- nu preguntas-->
                                <div class="col-xs-12 col-sm-4 emphasis">
                                    <h3><strong><%=usuario.n_preguntas%></strong></h3>
                                    <p>Preguntas</p>
                                </div>
                                <!-- numero de respuestas-->
                                <div class="col-xs-12 col-sm-4 emphasis">
                                    <h3><strong><%=usuario.n_respuestas%></strong></h3>
                                    <p>Respuestas</p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- MEDALLAS DEL USUARIO -->
                <%- include("medallas") %>

            </div>
        </div>

    </body>
</html>